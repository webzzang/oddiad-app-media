<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_232323"
        android:visibility="visible" android:tag="layout/activity_splash_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/noti_zone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/device_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/color_2fcd7c"
                android:textSize="51dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/device_noti"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/device_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:text="@string/device_create_site"
                android:textColor="@color/color_eeeeee"
                android:textSize="18dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/device_id_text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loading_zone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/color_232323"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/bi_view"
                    android:layout_width="165dp"
                    android:layout_height="33dp"
                    android:background="@drawable/img_bi_green"
                    app:layout_constraintBottom_toTopOf="@id/bi_pro"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />


                <ProgressBar
                    android:id="@+id/bi_pro"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="210dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="23dp"
                    android:background="@null"
                    android:max="100"
                    android:progress="16"
                    android:progressDrawable="@drawable/loading_progressbar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bi_view" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/bi_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/app_bi_text_1"
                android:textColor="@color/color_818181"
                android:textSize="30dp"
                app:layout_constraintRight_toLeftOf="@id/bi_text_2"
                app:layout_constraintTop_toTopOf="@id/bi_text_2" />

            <TextView
                android:id="@+id/bi_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/app_bi_text_2"
                android:textColor="@color/color_818181"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

         